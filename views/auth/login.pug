html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        link(href="/css/auth/style.css")
        title Login
    body
        section.vh-100
            .container-fluid.h-custom
                .row.d-flex.justify-content-center.align-items-center.h-100
                    .col-md-9.col-lg-6.col-xl-5
                        img.img-fluid(src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp", alt="Sample image")
                    .col-md-8.col-lg-6.col-xl-4.offset-xl-1
                        form(method='post')
      
                            // Username input
                            .form-outline.mb-4
                                label.form-label(for="form3Example3") Email
                                input#form3Example3.form-control.form-control-lg(type="text", name='email')
                            // Password input
                            .form-outline.mb-3
                                label.form-label(for="form3Example4") Password
                                input#form3Example4.form-control.form-control-lg(type="password", placeholder="Enter password",name="password")
                            .d-flex.justify-content-between.align-items-center
                            .text-center.text-lg-start.mt-4.pt-2
                                button.btn.btn-primary.btn-lg(type="submit", style="padding-left: 2.5rem; padding-right: 2.5rem;") Login
                                p.small.fw-bold.mt-2.pt-1.mb-0 Don&apos;t have an account? 
                                    a.link-danger(href="/auth/register") Register
   
