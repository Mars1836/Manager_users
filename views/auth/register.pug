html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        link(href="/css/auth/style.css")
        title Login
    body
        div.container
            .d-flex.justify-content-center
                form(action="", method="post", id="registerForm" style="width: 30rem")
                    .mb-3
                        .form-group 
                            label.form-label(for="exampleInputName1") Name
                            input#name.form-control(type="text", aria-describedby="nameHelp" name="name")
                            span#error.invalid-feedback
                    .mb-3
                        .form-group 
                            label.form-label(for="exampleInputEmail1") Email
                            input#email.form-control(type="text", aria-describedby="emailHelp" name="email")
                            span#error.invalid-feedback
                    .mb-3
                        .form-group 
                            label.form-label Password
                            input#password.form-control(type="password" name="password")
                            span#error.invalid-feedback
                    .mb-3
                        .form-group 
                            label.form-label(for="exampleInputPassword1") Repeat password 
                            input#repeat_password.form-control(type="password" name="repeat_passwort")
                            span#error.invalid-feedback
                    button.btn.btn-primary(type="submit") Submit
        script(src="/scripts/users/validator.js" type="text/javascript") 
        script(src="/scripts/auth_validator.js" type="text/javascript")