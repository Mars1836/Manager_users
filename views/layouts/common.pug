doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
        link(rel="stylesheet", href="/css/log-form.css")
        block linkStyle
        title Document
    body 
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .container-fluid
                a.navbar-brand(href="/") Codelife
                button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link.active(aria-current="page", href="/") Home
                        li.nav-item
                            a.nav-link(href="/users") Users
                if admin
                    .d-flex.align-items-center(style="width: 10rem; cursor: pointer")
                        a.d-flex.align-items-center(href="/", style="text-decoration:none;color:inherit")        
                            img.rounded-circle(src=`/uploads/img/${admin.infor.avatar}` width='30')
                            div.ms-2= admin.infor.name
                        .log-form
                            button.btn.btn-sm.ms-2.btn-show-logout(style="border-radius: 50%;background: #DDD")
                                i.bi.bi-caret-down-fill
                            .card.log-body.visually-hidden
                                ul.list-group.list-group-flush
                                    li.list-group-item(style="font-size:15px")
                                        a(href='/infor')
                                            button.btn.btn-secondary.btn-sm#update_infor_btn Setting Infor
                                    li.list-group-item(style="font-size:15px")
                                        button.btn.btn-secondary.btn-sm#logout_btn Log Out

        block content
        script(src="/scripts/log-form.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js",integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p",crossorigin="anonymous")
